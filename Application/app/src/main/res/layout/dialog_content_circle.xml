<?xml version="1.0" encoding="utf-8"?>
<!-- (Modified) From: https://github.com/jianjunxiao/BottomDialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Camera"
        android:textColor="#666666"
        android:textSize="14sp"
        android:focusable="true"
        app:drawableLeftCompat="@drawable/camera" />

    <TextView
        android:id="@+id/dialog_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Gallery"
        android:textColor="#666666"
        android:textSize="14sp"
        android:focusable="true"
        app:drawableStartCompat="@drawable/gallery" />

    <TextView
        android:id="@+id/dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Cancel"
        android:textColor="#666666"
        android:textSize="14sp"
        android:focusable="true"
        app:drawableStartCompat="@drawable/cancel" />

</LinearLayout>